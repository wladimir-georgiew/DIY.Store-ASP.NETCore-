@using DIY.Castle.Web.Areas.Administration.Models
@model ProductsRequestModel

<div class="col-md-10 mx-auto py-4">
    <div class="card">
        <div style="background-color:green" class="card-header text-uppercase text-white">
            <h4>Create Menu Item</h4>
        </div>
        <div class="card-body">
            <form enctype="multipart/form-data" asp-action="Create" method="post">
                <div style="text-align:left;" asp-validation-summary="All" class="text-danger"></div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="@Model.Name" class="control-label"></label>
                            <input asp-for="@Model.Name" class="form-control" />
                        </div>
                    </div>
                    <div class="clearfix"></div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="@Model.Description" class="control-label"></label>
                            <textarea style="height:150px;resize:none;" asp-for="@Model.Description" class="form-control"> </textarea>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="@Model.Price" class="control-label"></label>
                            <input type="number" min="0.00" max="10000.00" step="1.00" asp-for="@Model.Price" class="form-control" />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="@Model.Image" class="control-label"></label>
                            <div class="custom-file">
                                <input asp-for="@Model.Image" class="custom-file-input" id="customFile">
                                <label class="custom-file-label" for="customFile">Choose file</label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <a style="color: white" type="button" asp-area="" asp-controller="Home" asp-action="Index" class="btn btn-lg btn-danger rounded-0 text-uppercase">cancel</a>
                    <input type="submit" value="submit" class="btn btn-lg btn-primary rounded-0 text-uppercase" />
                </div>
            </form>
        </div>
    </div>
</div>
@section scripts{
    <script type="text/javascript">
        // Add the following code if you want the name of the file appear on select
        $(".custom-file-input").on("change", function () {
            var fileName = $(this).val().split("\\").pop();
            $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
        });
    </script>
}