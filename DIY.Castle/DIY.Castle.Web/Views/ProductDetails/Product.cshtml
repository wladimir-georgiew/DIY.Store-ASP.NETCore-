@using DIY.Castle.Web.Models;
@model ProductModel

<link href="/css/product-details.css" rel="stylesheet" />

<!--Section: Block Content-->
<section class="mb-5">

    <div class="row">
        <div class="col-md-6">
            <div class="slideshow-container">
                @foreach (var image in Model.ImagesSourcePaths)
                {
                <div class="mySlides faded">
                    <div class="numbertext">@(Model.ImagesSourcePaths.IndexOf(image)+1)/@Model.ImagesSourcePaths.Count</div>
                    <img src="@image" style=" object-fit: contain; height: 500px; width: 100%; background-color: #798560;">
                </div>
                }

                <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
                <a class="next" onclick="plusSlides(1)">&#10095;</a>

            </div>

            <div style="text-align:center">
                @foreach (var dot in Model.ImagesSourcePaths)
                {
                <span class="dot" onclick="currentSlide(@(Model.ImagesSourcePaths.IndexOf(dot)+1))"></span>
                }
            </div>
        </div>

        <div class="col-md-6">

            <h5>@Model.Name</h5>
            <p class="mb-2 text-muted text-uppercase small">@Model.ProductType</p>
            <p><span class="mr-1"><strong>@Model.Price лв.</strong></span></p>
            <p class="product-description">
                @Model.Description
            </p>
            <hr>
            <div class="counter btn">
                <span class="down" onClick='decreaseCount(event, this)'>-</span>
                <input id="product-quantity" type="text" value="1">
                <span class="up" onClick='increaseCount(event, this)'>+</span>
            </div>

            <a data-ajax="true" data-ajax-success="AddToBasket('@Model.Id', 1 ,'@Model.Name', '@Model.Price')" type="submit" class="btn button-product-details"><span>Добави в количката</span></a>
        </div>
    </div>

</section>
<!--Section: Block Content-->

<script src="/js/product-details.js" rel="stylesheet" ></script>