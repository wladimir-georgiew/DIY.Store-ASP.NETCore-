@using DIY.Castle.Web.Models;
@model ProductModel


<link rel="stylesheet" type="text/css" href="~/slick/slick.css"/>
<link rel="stylesheet" type="text/css" href="~/slick/slick-theme.css"/>

<div class="slider-for">
    @foreach (var image in Model.ImagesSourcePaths)
    {
        <img src="@image" />
   }
</div>
<div class="slider-nav">
    @foreach (var image in Model.ImagesSourcePaths)
    {
        <img src="@image" />
    }
</div>

<script type="text/javascript" src="~/js/jquery.min.v3.js"></script>
<script type="text/javascript" src="~/slick/slick.min.js"></script>

<script>
    $('.slider-for').slick({
        slidesToShow: 1,
        slidesToScroll: 1,
        arrows: false,
        fade: true,
        asNavFor: '.slider-nav'
    });
    $('.slider-nav').slick({
        slidesToShow: 3,
        slidesToScroll: 1,
        asNavFor: '.slider-for',
        dots: true,
        centerMode: true,
        focusOnSelect: true
    });
</script>